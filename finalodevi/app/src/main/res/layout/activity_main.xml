<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcd4"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/girisAd"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="İsminizi Giriniz"
        android:inputType="textPersonName"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/girisSoyad"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="Şifrenizi Giriniz"
        android:inputType="number"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisAd" />

    <Switch
        android:id="@+id/sw1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="162dp"
        android:inputType="number"
        android:text="Beni Hatırla"
        android:textStyle="bold"
        android:thumbTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisSoyad" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="188dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sw1" />

</androidx.constraintlayout.widget.ConstraintLayout>